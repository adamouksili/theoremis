{
    "comments": {
        "lineComment": "%",
        "blockComment": ["\\iffalse", "\\fi"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\\begin", "\\end"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "$", "close": "$" },
        { "open": "``", "close": "''" }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["$", "$"]
    ],
    "folding": {
        "markers": {
            "start": "\\\\begin\\{",
            "end": "\\\\end\\{"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "\\\\begin\\{(?!document)",
        "decreaseIndentPattern": "\\\\end\\{"
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
