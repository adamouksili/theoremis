{
    "name": "theoremis",
    "displayName": "Theoremis",
    "description": "Formal Verification Pipeline â€” LaTeX to Lean 4/Coq/Isabelle",
    "version": "0.1.0-alpha",
    "publisher": "theoremis",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:latex",
        "onLanguage:tex"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "theoremis-tex",
                "aliases": [
                    "Theoremis-LaTeX",
                    "theoremis-latex"
                ],
                "extensions": [
                    ".tex",
                    ".latex"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "theoremis.verify",
                "title": "Theoremis: Verify Current Document"
            },
            {
                "command": "theoremis.emitLean",
                "title": "Theoremis: Emit Lean 4"
            },
            {
                "command": "theoremis.emitCoq",
                "title": "Theoremis: Emit Coq"
            },
            {
                "command": "theoremis.emitIsabelle",
                "title": "Theoremis: Emit Isabelle"
            },
            {
                "command": "theoremis.exportAnnotated",
                "title": "Theoremis: Export Annotated LaTeX"
            }
        ],
        "configuration": {
            "title": "Theoremis",
            "properties": {
                "theoremis.leanPath": {
                    "type": "string",
                    "default": "lean",
                    "description": "Path to the Lean 4 binary"
                },
                "theoremis.autoVerify": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically verify on save"
                },
                "theoremis.bridgePort": {
                    "type": "number",
                    "default": 9473,
                    "description": "Port for the Lean verification bridge server"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./tsconfig.json",
        "watch": "tsc -watch -p ./tsconfig.json"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "typescript": "^5.3.0"
    }
}